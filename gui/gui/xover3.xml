<vbox>
    <hbox spacing="8">
        <frame label="Input">
            <vbox attach-x="0">
                <vumeter param="meter_L" mode="0" position="2" hold="1.5" falloff="2.5"/>
                <vumeter param="meter_R" mode="0" position="2" hold="1.5" falloff="2.5"/>
                <hbox spacing="12">
                    <label/>
                    <vbox>
                        <label/>
                        <label param="level" />
                        <knob param="level" size="5" type="1" />
                        <value param="level" />
                        <label/>
                        <combo param="mode" fill="0" expand="0"/>
                    </vbox>
                    <label/>
                </hbox>
            </vbox>
        </frame>
        <frame label="X-Over">
            <if cond="directlink">
                <line-graph refresh="1" width="400" height="120" param="freq0" expand="1" fill="1" crosshairs="1" freqhandles="2" enforce-handle-order="1" handle1-x="freq0" handle2-x="freq1"/>
            </if>
        </frame>
    </hbox>
    <hbox spacing="8">
        <frame label="Band 1">
            <vbox>
                <hbox>
                    <vbox spacing="4">
                        <label text="Active"/>
                        <toggle param="active1" size="1"/>
                        <toggle param="phase1" size="1"/>
                        <label text="Phase"/>
                    </vbox>
                    <vbox>
                        <label text="Level"/>
                        <knob param="level1" type="1"/>
                        <value param="level1"/>
                    </vbox>
                    <vbox>
                        <label text="Delay (ms)"/>
                        <knob param="delay1"/>
                        <value param="delay1"/>
                    </vbox>
                </hbox>
                <vumeter param="meter_L1" height="12" mode="0" position="2" hold="1.5" falloff="2.5"/>
                <vumeter param="meter_R1" height="12" mode="0" position="2" hold="1.5" falloff="2.5"/>
            </vbox>
        </frame>
        
        <frame label="Band 2">
            <vbox>
                <hbox>
                    <vbox spacing="4">
                        <label text="Active"/>
                        <toggle param="active2" size="1"/>
                        <toggle param="phase2" size="1"/>
                        <label text="Phase"/>
                    </vbox>
                    <vbox>
                        <label text="Level"/>
                        <knob param="level2" type="1"/>
                        <value param="level2"/>
                    </vbox>
                    <vbox>
                        <label text="Delay (ms)"/>
                        <knob param="delay2"/>
                        <value param="delay2"/>
                    </vbox>
                </hbox>
                <vumeter param="meter_L2" height="12" mode="0" position="2" hold="1.5" falloff="2.5"/>
                <vumeter param="meter_R2" height="12" mode="0" position="2" hold="1.5" falloff="2.5"/>
            </vbox>
        </frame>
        
        <frame label="Band 3">
            <vbox>
                <hbox>
                    <vbox spacing="4">
                        <label text="Active"/>
                        <toggle param="active3" size="1"/>
                        <toggle param="phase3" size="1"/>
                        <label text="Phase"/>
                    </vbox>
                    <vbox>
                        <label text="Level"/>
                        <knob param="level3" type="1"/>
                        <value param="level3"/>
                    </vbox>
                    <vbox>
                        <label text="Delay (ms)"/>
                        <knob param="delay3"/>
                        <value param="delay3"/>
                    </vbox>
                </hbox>
                <vumeter param="meter_L3" height="12" mode="0" position="2" hold="1.5" falloff="2.5"/>
                <vumeter param="meter_R3" height="12" mode="0" position="2" hold="1.5" falloff="2.5"/>
            </vbox>
        </frame>
        
    </hbox>
</vbox>
